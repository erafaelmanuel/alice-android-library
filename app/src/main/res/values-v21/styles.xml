<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:colorControlActivated">@color/colorActive</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Base.Button.Normal" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.Base.Button.Reverse" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/colorPumpkin</item>
        <item name="android:colorControlHighlight">@color/colorCarot</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.Switch" parent="AppTheme.Base">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorWetAsphalt</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="AppTheme.Stylex.TIL" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorWhite</item>
        <!-- Line unfocus -->
        <item name="colorControlNormal">@color/colorPrimary</item>
        <!-- Floating label -->
        <item name="colorControlActivated">@color/colorPumpkin</item>
        <!-- Line focus -->
        <item name="android:colorControlActivated">@color/colorPumpkin</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.Base.PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:textColor">@color/colorMidNightBlue</item>
    </style>

    <style name="AppTheme.Base.SpinnerTextColor"
        parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorWhite</item>
    </style>


</resources>